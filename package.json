{
  "name": "@molgenis/vip-report-api",
  "version": "4.4.1",
  "description": "TypeScript Report API for Variant Call Format (VCF) Report Templates",
  "scripts": {
    "build": "tsc --build",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/molgenis/vip-report-api.git"
  },
  "license": "LGPL-3.0",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "bugs": {
    "url": "https://github.com/molgenis/vip-report-api/issues"
  },
  "homepage": "https://github.com/molgenis/vip-report-api#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitest/coverage-v8": "^0.32.4",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6",
    "vitest": "^0.32.4"
  },
  "dependencies": {
    "@molgenis/vip-report-vcf": "^1.4.1"
  }
}
